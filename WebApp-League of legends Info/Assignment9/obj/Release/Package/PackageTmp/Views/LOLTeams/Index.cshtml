@model IEnumerable<Assignment9.Controllers.LOLTeamBase>

@{
    ViewBag.Title = "Index";
}

<h2>A List Of LOL Teams</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sponsor)
        </th>
        <th>
            Coach Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sponsor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoachFirstName),@Html.DisplayFor(modelItem => item.CoachLastName)
        </td>
        <td>
            <img border="0" alt="Logo" src=@Html.DisplayFor(modelItem => item.Logo) width="100" height="100" />
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
