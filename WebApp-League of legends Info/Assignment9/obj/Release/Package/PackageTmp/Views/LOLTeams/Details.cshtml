@model Assignment9.Controllers.LOLTeamWithDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details For @Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4>More Details Here</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Code)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Code)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @String.Format("{0:yyyy/MM/dd}", Model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sponsor)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sponsor.CompanyName)
        </dd>

        <dt>
            Coach Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CoachFirstName),@Html.DisplayFor(model => model.CoachLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Logo)
        </dt>

        <dd>
            <img border="0" alt="Logo" src=@Html.DisplayFor(model => model.Logo) width="100" height="100" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rank)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rank)
        </dd>
    </dl>
</div>
        <dt align ="center">
            <p style="font-size: 20px; color: #58ACFA"><span class="badge" style="font-size: 17px">@Html.DisplayFor(model => model.PlayersCount)</span> <b>Players in @Model.Name</b></p>
        </dt>
        <dd>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped">
                            <tr>
                                <th>Name</th>
                                <th>In-Game Name</th>
                                <th>Position</th>
                            </tr>
                            @foreach (var p in Model.Players)
                            {
                                <tr>
                                    <td><font color="green">@p.FirstName @p.LastName</font></td>
                                    <td><font color="green">@p.InGameName</font></td>
                                    <td><font color="red">@p.Role</font></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </dd>

<p>
    @Html.ActionLink("Back to List", "Index") |
    @if (Request.QueryString["sponsor"] != null)
    {
        @Html.ActionLink("Back to Sponsor", "Details", "Sponsors", new { id = Request.QueryString["sponsor"] }, null);
    }
</p>
